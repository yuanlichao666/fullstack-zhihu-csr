{
  "extends": [
    "./tsconfig.app.json"
  ],
  "include": [
    "src/**/__tests__/*",
    "./.zh/env/env.d.ts",
    "typed-router.d.ts",
    "typed-auto-route.d.ts",
    "typed-env.d.ts"
  ],
  "exclude": [],
  "compilerOptions": {
    "strict": true,
    "lib": [],
    "types": [
      "node",
      "jsdom"
    ],


    "noEmit": false,
    "outDir": "./node_modules/.tmp/", // 指定输出目录
    "rootDir": "./", // 指定源代码的根目录
    "composite": true,
    "declaration": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.vitest.tsbuildinfo",
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true
  },
  "references": [
    {
      "path":  "./tsconfig.app.json"
    }
  ]
}
